<html>
<head>
    <title>{% block title %}{% endblock %}</title>
    <meta http-equiv="content-type" content="text/html; charset=ISO-8859-1">
    <style type="text/css">
        .error { color: red; }
        .error1 { color: red; }
        .error2 { color: red; }
    </style>
    <script language="javascript" type="text/javascript">
        function disable(f)
        {
            var button = f.elements['submit'];
            button.value = 'Processing';
            button.disabled = 'true';
            return true;
        }
    </script>
</head>
<body>
{% load humanize %}
<div align ="center" style="background-color:white;width:100%;height:10%; font-size:12px;color:red;font-style:italic;"> <strong>Press ESC to close  </strong> </div>
<div align ="center" style="background-color:gray;border:0px solid black;width:100%;height:10%; font-size:12px;color:white"> <strong>EDIT RECEIPT  </strong> </div>
<div align="center" style="color:red;font-family:courier;font-size:13px;text-decoration:blink;" > {{varerr}}</div>
<form action="/eduflox/account/newyear/editreceipt/{{ getdetails.id }}/" method="post" name ="main" onsubmit="disable(this)">
    <table align ="left" style="width:100%;">
        <tr>
            <td>
                Amount:
            </td>
            <td><input type ="text" id="accname" size="35" name="accname" value ="{{getdetails.amount}}" style="border: #4772A9 1px solid;font-family: Arial, Helvetica, sans-serif;font-size: 12px;color: #000;text-align: left;height:16px;">
                &nbsp;<span class="error"> Amount is required</span>
            </td>
        </tr>
        <tr>
            <td>
                Particulars :
            </td>
            <td>
                <input type ="text" id="acccode" size="20" name="acccode" value ="{{getdetails.particular}}" style="border: #4772A9 1px solid;font-family: Arial, Helvetica, sans-serif;font-size: 12px;color: #000;text-align: left;height:16px;">
                &nbsp;<span class="error1"> Particulars is required</span>
            </td>
        </tr>
        <tr>
            <td>
                Trans. Date :
            </td>
            <td>
                <input type ="text" id="subname" size="30" name="subname" value ="{{getdetails.transdate|date:"m-d-Y"}}" readonly ="readonly" style="border: #4772A9 1px solid;font-family: Arial, Helvetica, sans-serif;font-size: 12px;color: #000;text-align: left;height:16px;">
            </td>
        </tr>
        <tr>
            <td>
                Invoice No :
            </td>
            <td>
                <input type ="text" id="grpname" size="25" name="grpname" value ="{{getdetails.invoiceno}}" style="border: #4772A9 1px solid;font-family: Arial, Helvetica, sans-serif;font-size: 12px;color: #000;text-align: left;height:16px;">
                &nbsp;<span class="error2"> Invoice No is required</span>
            </td>
        </tr>
        <tr>
            <td>
                Customer Name :
            </td>
            <td>
                <input type ="text" id="customer" size="25" name="customer" value ="{{getdetails.cusname}}" disabled="disabled" style="border: #4772A9 1px solid;font-family: Arial, Helvetica, sans-serif;font-size: 12px;color: #000;text-align: left;height:16px;">
            </td>
        </tr>
        <tr>
            <td>
                Customer Name :
            </td>
            <td>
                <input type ="text" id="cuscode" size="25" name="cuscode" value ="{{getdetails.cuscode}}" disabled="disabled" style="border: #4772A9 1px solid;font-family: Arial, Helvetica, sans-serif;font-size: 12px;color: #000;text-align: left;height:16px;">
            </td>
        </tr>
        <tr>
            <td>
                <a  href ="/eduflox/account/newyear/deletereceipt/{{getdetails.id}}" style ="color:Black;;font-size:9px"> <img style = "width:25px;height:25px" src ="/static/imgs/editdelete.png" >  </a>Delete Receipt </td>
            <td style="text-align:left">
                <input name="submit" type= "submit" value="  Update Account  ">
            </td>
        </tr>
        <tr>
            <td>
                <input type="hidden" name="hcode"
                       value="{{getdetails.id}}">
            </td>
        </tr>
    </table></form>

<script type="text/javascript">
    document.getElementById('accname').focus()
</script>
<script>
    $(document).ready(function() {
        var pickerOpts = {
            //appendText: "mm/dd/yy",
            //defaultDate: "+5",
            showOtherMonths: true,
            changeMonth: true,
            changeYear: true,
            showButtonPanel: true
            // showOn: "button"
        };
        $("#subname").datepicker(pickerOpts);

    });

</script>
<script type="text/javascript">
    $(document).ready(function() {
        $("#accname").focus();
        $('.error').hide();
        $('.submit').click(function(event){
            var data=$("#accname").val();
            var len=data.length;
            if (len <= 0){
                $('.error').show();
                $("#accname").focus();
                //$('.error').show();
                event.preventDefault();
            }
            else
            {
                $('.error').hide();
            }

            //*********************************************************
            if (jQuery.isNumeric(data) == true){

            }
            else
            {
                alert('A valid Amount is required');
                $("#accname").focus();
                event.preventDefault();
            }
            //**********************************************************
        });
    });
</script>
<script type="text/javascript" >
    $(document).ready(function() {
        $("#accname").keyup(function () {
            $('.error').hide();
        });
    });
</script>
<script type="text/javascript">
    $(document).ready(function() {
        $("#acccode").focus();
        $('.error1').hide();
        $('.submit').click(function(event){
            var data=$("#acccode").val();
            var len=data.length;
            if (len <= 0){
                $('.error1').show();
                $("#acccode").focus();
                //$('.error').show();
                event.preventDefault();
            }
            else
            {
                $('.error1').hide();
            }
        });
    });
</script>
<script type="text/javascript" >
    $(document).ready(function() {
        $("#acccode").keyup(function () {
            $('.error1').hide();
        });
    });
</script>

<script type="text/javascript">
    $(document).ready(function() {
        $("#grpname").focus();
        $('.error2').hide();
        $('.submit').click(function(event){
            var data=$("#grpname").val();
            var len=data.length;
            if (len <= 0){
                $('.error2').show();
                $("#grpname").focus();
                //$('.error').show();
                event.preventDefault();
            }
            else
            {
                $('.error2').hide();
            }
        });
    });
</script>
<script type="text/javascript" >
    $(document).ready(function() {
        $("#grpname").keyup(function () {
            $('.error2').hide();
        });
    });
</script>

</body>
</html>