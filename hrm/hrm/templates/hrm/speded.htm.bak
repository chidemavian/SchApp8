    data:data,
    success:function(html) {
         $(".listbox").show();
         $(".nameslist").html(html);
         //$("#test").html(html);
         $('li').hover(function(){
         $(this).addClass('hover');
          },function(){
         $(this).removeClass('hover');
          });
         $('li').click(function(){
         var newdata = $(this).text();
         var commsep = newdata.split(",");
         //$("#id_cusname").val($(this).text()); cusbal
         $("#id_staffname").val(commsep[1]);
         $("#id_staffid").val(commsep[0]);
         //$("#id_accbal").val(commsep[2]);
         $('.listbox').hide();
        // openrec()



          });

    }
});
   //alert("error");
   return false;
});
});

